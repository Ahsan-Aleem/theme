{% schema %}
{
  "name": "Hoverable Section",
  "settings": [
    {
      "type": "header",
      "content": "Hoverable Accordion Section Settings"
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Portfolio"
    },
    {
      "type": "image_picker",
      "id": "portfolio_image_1",
      "label": "Portfolio Image 1"
    },
    {
      "type": "text",
      "id": "portfolio_title_1",
      "label": "Portfolio Title 1",
      "default": "Vector Art"
    },
    {
      "type": "textarea",
      "id": "portfolio_description_1",
      "label": "Portfolio Description 1",
      "default": "Description of Vector Art"
    },
    {
      "type": "image_picker",
      "id": "portfolio_image_2",
      "label": "Portfolio Image 2"
    },
    {
      "type": "text",
      "id": "portfolio_title_2",
      "label": "Portfolio Title 2",
      "default": "Photography"
    },
    {
      "type": "textarea",
      "id": "portfolio_description_2",
      "label": "Portfolio Description 2",
      "default": "Description of Photography"
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<div class="hoverable-accordion-section">
  <h2>{{ section.settings.section_title }}</h2>
  <div class="accordion-container">
    <!-- Accordion Item 1 -->
    <div class="accordion-item">
      <div class="accordion-header">
        <h3>{{ section.settings.portfolio_title_1 }}</h3>
      </div>
      <div class="accordion-body">
        <img src="{{ section.settings.portfolio_image_1 | image_url: width: 800 }}" alt="{{ section.settings.portfolio_title_1 }}" height="" width="">
        <p>{{ section.settings.portfolio_description_1 }}</p>
      </div>
    </div>
    <!-- Accordion Item 2 -->
    <div class="accordion-item">
      <div class="accordion-header">
        <h3>{{ section.settings.portfolio_title_2 }} aHSAN</h3>
      </div>
      <div class="accordion-body">
        <img src="{{ section.settings.portfolio_image_2 | image_url: width: 800 }}" alt="{{ section.settings.portfolio_title_2 }}" height="" width="">
        <p>{{ section.settings.portfolio_description_2 }}</p>
      </div>
    </div>
  </div>
</div>

<style>
/* Styling for the Accordion Section */
.hoverable-accordion-section {
  font-family: 'Manrope', sans-serif;
}

.accordion-container {
  margin: 20px 0;
}

.accordion-item {
  margin-bottom: 10px;
  border: 1px solid var(--box-shadow-regular);
  border-radius: 5px;
  overflow: hidden;
}

.accordion-header {
  background-color: var(--color-primary);
  color: var(--white);
  cursor: pointer;
  padding: 15px;
  font-weight: bold;
}

.accordion-body {
  display: none;
  padding: 15px;
  background-color: var(--bg-gray);
}

.accordion-body img {
  max-width: 100%;
  height: auto;
  border-radius: 5px;
}

.accordion-header:hover {
  background-color: var(--color-secondary);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var headers = document.querySelectorAll('.accordion-header');

  headers.forEach(function(header) {
    header.addEventListener('click', function() {
      var body = this.nextElementSibling;

      if (body.style.display === 'block') {
        body.style.display = 'none';
      } else {
        document.querySelectorAll('.accordion-body').forEach(function(item) {
          item.style.display = 'none';
        });
        body.style.display = 'block';
      }
    });
  });
});
</script>
